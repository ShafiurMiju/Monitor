{
  "name": "odl-portal-client",
  "version": "1.0.0",
  "description": "ODL Portal",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:win:prod": "cross-env NODE_ENV=production electron-builder --win --x64",
    "build:dir": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.odlportal.client",
    "productName": "ODL Portal",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/screenshot-desktop/**/*",
      "**/node_modules/uiohook-napi/**/*",
      "**/node_modules/**/*.node"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ODL Portal",
      "runAfterFinish": true,
      "artifactName": "ODL-Portal-Setup.exe"
    },
    "portable": {
      "artifactName": "ODL-Portal-Client.exe"
    },
    "electronUpdaterCompatibility": ">=2.16",
    "asar": true,
    "forceCodeSigning": false
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "axios": "^1.13.1",
    "node-machine-id": "^1.1.12",
    "screenshot-desktop": "^1.15.3",
    "socket.io-client": "^4.8.1",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^39.0.0",
    "electron-builder": "^25.1.8"
  }
}
